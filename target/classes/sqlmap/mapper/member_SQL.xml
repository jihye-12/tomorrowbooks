<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.multi.campus.dao.MemberDao">
	
	 <!--회원 저장  -->
	<insert id="insertMember" parameterType="memberDto" >
		insert into tomorrow(
			email
			, pass
			, name
		) values(
			#{email}
			, #{password}
			, #{name}
		)
	</insert>
	 

	 <!--가입시 이메일, 닉네임 중복체크-->
	<select id="insertCheck" parameterType="memberDto" resultType="memberDto">
		select 
			email
			, pass
			, name
		from tomorrow
		where 1=1
		<if test="email != null">
        	AND email = #{email}
   		</if>
		<if test="name != null">
        	AND name = #{name}
   		</if>
	</select>
	 
</mapper>